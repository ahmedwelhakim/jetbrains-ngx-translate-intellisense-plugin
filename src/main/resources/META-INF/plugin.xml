<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin</id>
    <name>Ngx Translate Toolkit</name>
    <vendor email="ahmed.w.elhakim@gmail.com">Ahmed Elhakim</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <depends>com.intellij.modules.json</depends>
    <depends>com.intellij.modules.xml</depends>
    <depends>JavaScript</depends>
    <depends>AngularJS</depends>
    <resource-bundle>messages.NgxTranslateToolsetBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.ui.NgxTranslateToolWindowFactory"
                id="Ngx Translate Toolkit"
                anchor="right"
        />
        <psi.referenceContributor language="TypeScript"
                                  implementation="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.reference.NgxTranslateReferenceContributor"/>
        <psi.referenceContributor language="Angular2"
                                  implementation="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.reference.NgxTranslateReferenceContributor"/>

        <completion.contributor language="Angular2"
                                implementationClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.completion.NgxTranslateCompletionContributor"/>
        <completion.contributor language="TypeScript"
                                implementationClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.completion.NgxTranslateCompletionContributor"/>

        <fileBasedIndex
                implementation="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.indexes.NgxTranslateKeysFileIndex"/>

        <codeInsight.inlayProvider
                language="TypeScript"
                implementationClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.inlay.NgxTranslateInlayHintsProvider"/>
        <codeInsight.inlayProvider
                language="Angular2Html"
                implementationClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.inlay.NgxTranslateInlayHintsProvider"/>

        <projectConfigurable
                instance="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.settings.NgxTranslateSettingsConfigurable"
                displayName="Ngx Translate Toolkit"
                id="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.settings"
        />
    </extensions>
</idea-plugin>

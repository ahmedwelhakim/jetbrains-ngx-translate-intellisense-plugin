    <name>jetbrain-ngx-translate-toolkit-plugin</name>
    <vendor>ahmedwelhakim</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>

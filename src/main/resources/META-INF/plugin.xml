    <name>Ngx Translate Toolkit</name>
    <vendor email="ahmed.w.elhakim@gmail.com">Ahmed Elhakim</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.NgxTranslateToolsetBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.ahmedwelhakim.jetbrainngxtranslatetoolkitplugin.toolWindow.NgxTranslateToolWindowFactory"
                id="MyToolWindow"
                anchor="right"

        />
